<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Icandoenglish" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Calendar View Style -->
    <style name="CalendarViewStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:colorAccent">#4A90E2</item>
        <item name="android:colorPrimary">#4A90E2</item>
        <item name="android:colorPrimaryDark">#1976D2</item>
        <item name="android:textColorPrimary">#2C3E50</item>
        <item name="android:textColorSecondary">#7F8C8D</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:colorControlNormal">#BDBDBD</item>
        <item name="android:colorControlActivated">#4A90E2</item>
        <item name="android:colorControlHighlight">#E3F2FD</item>
    </style>
</resources>